<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.ara.connect.model.db.user.User" table="user" schema="" catalog="ara">
        <id name="id">
            <column name="id" sql-type="bigint" length="19" not-null="true"/>
        </id>
        <property name="userName">
            <column name="user_name" sql-type="varchar" length="128"
                    not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar" length="128"
                    not-null="true"/>
        </property>
    </class>
</hibernate-mapping>